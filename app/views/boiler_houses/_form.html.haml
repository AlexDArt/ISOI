= form_for @boiler_house do |f|
  = error_messages_for @boiler_house
  .row
    .col-md-6
      .form-group
        = f.label :bhname
        = f.text_field :bhname, class: 'form-control'
        = f.error_messages_for(:bhname)
    .col-md-6
      .form-group
        = f.label :address
        = f.text_field :address, class: 'form-control'
        = f.error_messages_for(:address)
    .col-md-6
      .form-group
        = f.label :phones_of_operators
        = f.text_field :phones_of_operators, class: 'form-control'
        = f.error_messages_for(:phones_of_operators)
    .col-md-6
      .form-group
        = f.label :water_intake_unit_id
        = f.select :water_intake_unit_id, WaterIntakeUnit.all.collect{|t| [t.wiunum, t.id]}, {:prompt => ""}, class: 'form-control'
        = f.error_messages_for(:water_intake_unit)
  %h1 Координаты
  .row
    .col-md-6
      .form-group
        = f.label :latitude
        = f.text_field :latitude, class: 'form-control'
        = f.error_messages_for(:latitude)
    .col-md-6
      .form-group
        = f.label :longitude
        = f.text_field :longitude, class: 'form-control'
        = f.error_messages_for(:longitude)
  %h2 Выберите электрические подстанции
  %h3 (для выбора нескольких зажмите ctrl)
  .field
    = f.select :transformer_substations, TransformerSubstation.all.collect{|t| [t.tsnum, t.id]}, {:prompt => ""}, {:multiple => true, class: 'form-control'}
  %br 
  - if is_admin?
    .form-actions.bottom20
      = f.submit nil, class: 'btn btn-primary'
  - else
    %h3 Вносить изменения(регистрировать новые) может только администратор
