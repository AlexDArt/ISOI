= form_for @transformer_substation do |f|
  = error_messages_for @transformer_substation
  .row
    .col-md-6
      .form-group
        = f.label :tsnum
        = f.number_field :tsnum, class: 'form-control'
        = f.error_messages_for(:tsnum)
    .col-md-6
      .form-group
        = f.label :address
        = f.text_field :address, class: 'form-control'
        = f.error_messages_for(:address)

    .col-md-6
      .form-group
        = f.label :phones_of_operators
        = f.text_field :phones_of_operators, class: 'form-control'
        = f.error_messages_for(:phones_of_operators)

    .col-md-6
      .form-group
        = f.label :power_supply_center
        = f.text_field :power_supply_center, class: 'form-control'
        = f.error_messages_for(:power_supply_center)

  %h1 Координаты
  .row
    .col-md-6
      .form-group
        = f.label :latitude
        = f.text_field :latitude, class: 'form-control'
        = f.error_messages_for(:latitude)
    .col-md-6
      .form-group
        = f.label :longitude
        = f.text_field :longitude, class: 'form-control'
        = f.error_messages_for(:longitude)
  %h2 Выберите котельные
  %h3 (для выбора нескольких зажмите ctrl)
  .field
    = f.select :boiler_houses, BoilerHouse.all.collect{|t| [t.bhname, t.id]}, {:prompt => ""}, {:multiple => true, class: 'form-control'}
  %h2 Выберите водозаборы
  %h3 (для выбора нескольких зажмите ctrl)
  .field
    = f.select :water_intake_units, WaterIntakeUnit.all.collect{|q| [q.wiunum, q.id]}, {:prompt => ""}, {:multiple => true, class: 'form-control'}
  %br 
  - if is_admin?
    .form-actions.bottom20
      = f.submit nil, class: 'btn btn-primary'
  - else
    %h3 Вносить изменения(регистрировать новые) может только администратор
